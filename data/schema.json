{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Developer Portfolio Schema",
    "description": "Schema for defining developer portfolio content",
    "type": "object",
    "required": ["meta", "profile"],
    "properties": {
      "meta": {
        "type": "object",
        "description": "Basic metadata about the portfolio",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Portfolio page title"
          },
          "description": {
            "type": "string",
            "description": "SEO description"
          },
          "themeColor": {
            "type": "string",
            "description": "Primary theme color (hex, rgb, or tailwind class)",
            "default": "blue"
          },
          "accentColor": {
            "type": "string",
            "description": "Secondary accent color",
            "default": "indigo"
          }
        }
      },
      "profile": {
        "type": "object",
        "description": "Developer's personal information",
        "required": ["name", "title"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Developer's full name"
          },
          "title": {
            "type": "string",
            "description": "Professional title"
          },
          "location": {
            "type": "string",
            "description": "Current location"
          },
          "bio": {
            "type": "string",
            "description": "Short biography or professional summary"
          },
          "avatar": {
            "type": "string",
            "description": "Path to profile picture (optional)"
          },
          "socialLinks": {
            "type": "array",
            "description": "List of social media profiles",
            "items": {
              "type": "object",
              "required": ["name", "url"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the platform (github, linkedin, twitter, etc.)"
                },
                "url": {
                  "type": "string",
                  "description": "Full URL to profile"
                },
                "icon": {
                  "type": "string",
                  "description": "Font Awesome icon name (without the fa- prefix)",
                  "default": "derived from name"
                }
              }
            }
          }
        }
      },
      "navbar": {
        "type": "object",
        "description": "Navigation configuration",
        "properties": {
          "logo": {
            "type": "string",
            "description": "Custom logo text or HTML",
            "default": "derived from initials"
          },
          "links": {
            "type": "array",
            "description": "Navigation links",
            "items": {
              "type": "object",
              "required": ["text", "url"],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Display text"
                },
                "url": {
                  "type": "string",
                  "description": "URL or anchor link"
                },
                "ariaLabel": {
                  "type": "string",
                  "description": "Accessibility label"
                }
              }
            },
            "default": ["About", "Experience", "Projects", "Skills", "Contact"]
          }
        }
      },
      "hero": {
        "type": "object",
        "description": "Hero section configuration",
        "properties": {
          "greeting": {
            "type": "string",
            "description": "Greeting text",
            "default": "Hello, I'm"
          },
          "tagline": {
            "type": "string",
            "description": "Short professional tagline"
          },
          "description": {
            "type": "string",
            "description": "Expanded description (supports HTML)"
          },
          "cta": {
            "type": "object",
            "description": "Call to action buttons",
            "properties": {
              "primary": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "url": { "type": "string" },
                  "ariaLabel": { "type": "string" }
                }
              },
              "secondary": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "url": { "type": "string" },
                  "ariaLabel": { "type": "string" }
                }
              }
            },
            "default": {
              "primary": {
                "text": "Get in touch",
                "url": "#contact"
              },
              "secondary": {
                "text": "View Projects",
                "url": "#projects"
              }
            }
          },
          "terminal": {
            "type": "object",
            "description": "Terminal display configuration (optional)",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "lines": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "about": {
        "type": "object",
        "description": "About section configuration",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "About Me"
          },
          "description": {
            "type": "string",
            "description": "Main section description"
          },
          "cards": {
            "type": "array",
            "description": "Feature cards highlighting key skills/areas",
            "items": {
              "type": "object",
              "properties": {
                "icon": {
                  "type": "string",
                  "description": "Font Awesome icon name"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          },
          "passion": {
            "type": "string",
            "description": "Statement about passion/motivation (optional)"
          }
        }
      },
      "experience": {
        "type": "object",
        "description": "Work experience section",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "Work Experience"
          },
          "description": {
            "type": "string",
            "description": "Section description"
          },
          "layout": {
            "type": "string",
            "enum": ["timeline", "cards", "list"],
            "description": "Display layout for experience items",
            "default": "timeline"
          },
          "jobs": {
            "type": "array",
            "description": "List of work positions",
            "items": {
              "type": "object",
              "required": ["company", "position", "period"],
              "properties": {
                "company": {
                  "type": "string",
                  "description": "Company name"
                },
                "location": {
                  "type": "string",
                  "description": "Job location"
                },
                "position": {
                  "type": "string",
                  "description": "Job title"
                },
                "period": {
                  "type": "string",
                  "description": "Employment period"
                },
                "achievements": {
                  "type": "array",
                  "description": "Key achievements/responsibilities",
                  "items": {
                    "type": "string"
                  }
                },
                "skills": {
                  "type": "array",
                  "description": "Skills used in this position",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "projects": {
        "type": "object",
        "description": "Projects section",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "Key Projects"
          },
          "description": {
            "type": "string",
            "description": "Section description"
          },
          "layout": {
            "type": "string",
            "enum": ["featured", "grid", "list"],
            "description": "Display layout for projects",
            "default": "featured"
          },
          "list": {
            "type": "array",
            "description": "List of projects",
            "items": {
              "type": "object",
              "required": ["title", "description"],
              "properties": {
                "icon": {
                  "type": "string",
                  "description": "Font Awesome icon name"
                },
                "title": {
                  "type": "string",
                  "description": "Project title"
                },
                "description": {
                  "type": "string",
                  "description": "Project description"
                },
                "imageUrl": {
                  "type": "string",
                  "description": "Project image URL (optional)"
                },
                "projectUrl": {
                  "type": "string",
                  "description": "Live project URL (optional)"
                },
                "repoUrl": {
                  "type": "string",
                  "description": "Code repository URL (optional)"
                },
                "featured": {
                  "type": "boolean",
                  "description": "Whether this is a featured project",
                  "default": false
                },
                "tags": {
                  "type": "array",
                  "description": "Project tags/technologies",
                  "items": {
                    "type": "string"
                  }
                },
                "metrics": {
                  "type": "array",
                  "description": "Project metrics/results (optional)",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Metric name"
                      },
                      "value": {
                        "type": "string",
                        "description": "Metric value"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "skills": {
        "type": "object",
        "description": "Skills section",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "Skills & Expertise"
          },
          "description": {
            "type": "string",
            "description": "Section description"
          },
          "categories": {
            "type": "array",
            "description": "Skill categories",
            "items": {
              "type": "object",
              "required": ["title", "skills"],
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Category title"
                },
                "icon": {
                  "type": "string",
                  "description": "Font Awesome icon name"
                },
                "layout": {
                  "type": "string",
                  "enum": ["bars", "tags", "icons"],
                  "description": "How to display skills in this category",
                  "default": "bars"
                },
                "skills": {
                  "type": "array",
                  "description": "List of skills in this category",
                  "items": {
                    "type": "object",
                    "required": ["name"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Skill name"
                      },
                      "level": {
                        "type": "string",
                        "description": "Skill level (for bar display)",
                        "pattern": "^\\d{1,3}%$"
                      },
                      "icon": {
                        "type": "string",
                        "description": "Font Awesome icon (for icon display)"
                      }
                    }
                  }
                }
              }
            }
          },
          "certifications": {
            "type": "object",
            "description": "Certifications subsection (optional)",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "title": {
                "type": "string",
                "default": "Certifications"
              },
              "icon": {
                "type": "string",
                "default": "certificate"
              },
              "list": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "education": {
        "type": "object",
        "description": "Education section",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "Education"
          },
          "schools": {
            "type": "array",
            "description": "Educational institutions",
            "items": {
              "type": "object",
              "required": ["name", "degree", "field", "period"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Institution name"
                },
                "location": {
                  "type": "string",
                  "description": "Institution location"
                },
                "degree": {
                  "type": "string",
                  "description": "Degree type"
                },
                "field": {
                  "type": "string",
                  "description": "Field of study"
                },
                "period": {
                  "type": "string",
                  "description": "Study period"
                },
                "icon": {
                  "type": "string",
                  "description": "Font Awesome icon name",
                  "default": "graduation-cap"
                },
                "gpa": {
                  "type": "string",
                  "description": "GPA or grade (optional)"
                },
                "focusAreas": {
                  "type": "array",
                  "description": "Areas of focus/specialization",
                  "items": {
                    "type": "string"
                  }
                },
                "activities": {
                  "type": "array",
                  "description": "Activities and achievements",
                  "items": {
                    "type": "string"
                  }
                },
                "capstoneProject": {
                  "type": "string",
                  "description": "Description of capstone project (optional)"
                }
              }
            }
          }
        }
      },
      "contact": {
        "type": "object",
        "description": "Contact section",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Whether to show the section",
            "default": true
          },
          "title": {
            "type": "string",
            "description": "Section title",
            "default": "Get In Touch"
          },
          "description": {
            "type": "string",
            "description": "Section description"
          },
          "form": {
            "type": "object",
            "description": "Contact form configuration",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "title": {
                "type": "string",
                "default": "Send a Message"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "label", "type"],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["text", "email", "tel", "textarea"]
                    },
                    "required": {
                      "type": "boolean",
                      "default": true
                    },
                    "placeholder": {
                      "type": "string"
                    }
                  }
                },
                "default": [
                  {"id": "name", "label": "Name", "type": "text", "required": true},
                  {"id": "email", "label": "Email", "type": "email", "required": true},
                  {"id": "message", "label": "Message", "type": "textarea", "required": true}
                ]
              },
              "submitText": {
                "type": "string",
                "default": "Send Message"
              },
              "saveToFile": {
                "type": "boolean",
                "description": "Whether to save form submissions to a file",
                "default": true
              },
              "successMessage": {
                "type": "string",
                "default": "Thank you! Your message has been sent successfully."
              }
            }
          },
          "info": {
            "type": "object",
            "description": "Contact information",
            "properties": {
              "title": {
                "type": "string",
                "default": "Contact Information"
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["icon", "title", "value"],
                  "properties": {
                    "icon": {
                      "type": "string",
                      "description": "Font Awesome icon name"
                    },
                    "title": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    },
                    "isLink": {
                      "type": "boolean",
                      "default": false
                    },
                    "url": {
                      "type": "string",
                      "description": "URL if this is a link"
                    }
                  }
                }
              },
              "availability": {
                "type": "object",
                "description": "Availability information (optional)",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  },
                  "title": {
                    "type": "string",
                    "default": "Availability"
                  },
                  "text": {
                    "type": "string"
                  },
                  "level": {
                    "type": "string",
                    "pattern": "^\\d{1,3}%$"
                  },
                  "label": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "footer": {
        "type": "object",
        "description": "Footer configuration",
        "properties": {
          "logo": {
            "type": "string",
            "description": "Custom logo text or HTML"
          },
          "tagline": {
            "type": "string",
            "description": "Short tagline"
          },
          "links": {
            "type": "array",
            "description": "Footer navigation links",
            "items": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              }
            }
          },
          "socialLinks": {
            "type": "array",
            "description": "Social media links (can reuse from profile)",
            "items": {
              "type": "object",
              "properties": {
                "icon": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "ariaLabel": {
                  "type": "string"
                }
              }
            }
          },
          "copyright": {
            "type": "string",
            "description": "Copyright text",
            "default": "Â© 2025. All rights reserved."
          }
        }
      }
    }
  }